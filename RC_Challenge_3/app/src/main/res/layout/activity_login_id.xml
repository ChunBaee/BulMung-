<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="한국어 (대한민국)"
                        android:textColor="@color/gray_70" />

                    <ImageView
                        android:layout_width="10sp"
                        android:layout_height="10sp"
                        android:layout_margin="5sp"
                        android:background="@drawable/icon_down_arrow" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/logo_insta"
                    android:layout_width="0sp"
                    android:layout_height="0sp"
                    android:background="@drawable/img_insta_logo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.065"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.25"
                    app:layout_constraintWidth_percent="0.4" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/id_input_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0sp"
                    android:layout_height="0sp"
                    android:layout_marginTop="15sp"
                    app:hintEnabled="false"
                    app:layout_constraintHeight_percent="0.07"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/logo_insta"
                    app:layout_constraintWidth_percent="0.9">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/input_id_border"
                        android:hint="전화번호, 이메일 주소 또는 사용자 이름"
                        android:textSize="13sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password_input_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0sp"
                    android:layout_height="0sp"
                    android:layout_marginTop="10sp"
                    app:hintEnabled="false"
                    app:layout_constraintHeight_percent="0.07"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/id_input_layout"
                    app:layout_constraintWidth_percent="0.9"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="50sp"
                        android:background="@drawable/input_id_border"
                        android:hint="비밀번호"
                        android:inputType="textPassword"
                        android:textSize="13sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_login"
                    android:layout_width="0sp"
                    android:layout_height="0sp"
                    android:layout_marginTop="10sp"
                    android:alpha="0.5"
                    android:background="@drawable/border_facebook_button"
                    android:clickable="false"
                    android:text="로그인"
                    android:textColor="@color/white"
                    app:layout_constraintHeight_percent="0.07"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/password_input_layout"
                    app:layout_constraintWidth_percent="0.9" />

                <TextView
                    android:id="@+id/txt_forgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="로그인 상세 정보를 잊으셨나요?"
                    android:textSize="12sp"
                    app:layout_constraintHorizontal_bias="0.38"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_login" />

                <TextView
                    android:id="@+id/txt_login_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:clickable="true"
                    android:text="로그인 도움말 보기."
                    android:textColor="@color/login_txt_color"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@id/txt_forgot"
                    app:layout_constraintTop_toBottomOf="@id/btn_login" />

                <View
                    android:id="@+id/and_border"
                    android:layout_width="0sp"
                    android:layout_height="0.8sp"
                    android:background="@color/gray_70"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_login_info"
                    app:layout_constraintVertical_bias="0.075"
                    app:layout_constraintWidth_percent="0.9" />

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="40sp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:clickable="false"
                    android:text="또는"
                    android:textColor="@color/gray_70"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_login_info"
                    app:layout_constraintVertical_bias="0" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/and_border">

                    <ImageView
                        android:layout_width="25sp"
                        android:layout_height="25sp"
                        android:background="@drawable/icon_facebook_blue" />

                    <TextView
                        android:id="@+id/login_facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5sp"
                        android:clickable="true"
                        android:text="Facebook으로 로그인"
                        android:textColor="@color/facebook_color"
                        android:textSize="13sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"
                    android:background="@color/gray_50"
                    app:layout_constraintBottom_toTopOf="@id/bottomView"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <LinearLayout
                    android:id="@+id/bottomView"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.055"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <TextView
                        android:id="@+id/txt_haveAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="계정이 없으신가요?"
                        android:textColor="@color/gray_70"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.40"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3sp"
                        android:clickable="true"
                        android:text="가입하기."
                        android:textColor="@color/login_txt_color"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/txt_haveAccount"
                        app:layout_constraintTop_toTopOf="parent" />


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>