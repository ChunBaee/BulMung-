<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginVertical="10sp"
            android:weightSum="6">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:background="@color/color_alarm"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="17sp"
                    android:layout_height="17sp"
                    android:src="@drawable/icon_bell"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:background="@color/color_pin"
                android:layout_weight="1" >
                <ImageView
                    android:layout_width="17sp"
                    android:layout_height="17sp"
                    android:src="@drawable/icon_pin"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:background="@color/no_color"
                android:layout_weight="2" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:text="읽음"
                android:textColor="@color/white"
                android:background="@color/color_read"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvRemove"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:text="나가기"
                android:clickable="true"
                android:textColor="@color/white"
                android:background="@color/color_exit"
                android:layout_weight="1"
                android:gravity="center" />


        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/swpie_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10sp"
            android:focusable="true"
            android:clickable="true"
            android:paddingHorizontal="10sp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/img_chatlist"
                android:layout_width="65sp"
                android:layout_height="65sp"
                android:background="@drawable/frame_border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_chatlist_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:text="이름"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/txt_chatlist_content"
                app:layout_constraintLeft_toRightOf="@id/img_chatlist"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_chatlist_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7sp"
                android:text="0"
                android:textColor="@color/less_gray"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@id/txt_chatlist_content"
                app:layout_constraintLeft_toRightOf="@id/txt_chatlist_title"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_chatlist_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:text="내용"
                android:textColor="@color/gray"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/img_chatlist"
                app:layout_constraintTop_toBottomOf="@id/txt_chatlist_title" />

            <TextView
                android:id="@+id/txt_chatlist_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="time"
                android:layout_marginRight="5sp"
                android:textColor="@color/gray"
                android:textSize="13sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</layout>