<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_daytime_good">

        <TextView
            android:id="@+id/txt_standard_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기준 시간"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/standard_location" />

        <TextView
            android:id="@+id/standard_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 위치를 찾는 중입니다."
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/txt_standard_time"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_weather" />

        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toTopOf="@id/btn_dust"
            app:layout_constraintLeft_toRightOf="@id/txt_standard_time"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_api_request"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toTopOf="@id/btn_dust"
            app:layout_constraintRight_toLeftOf="@id/btn_refresh"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toBottomOf="@id/txt_standard_time"
            app:layout_constraintRight_toLeftOf="@id/btn_dust"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/txt_nowDegree"/>

        <ImageButton
            android:id="@+id/btn_dust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintTop_toBottomOf="@id/txt_standard_time"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_weather"
            app:layout_constraintBottom_toTopOf="@id/txt_nowDegree"/>

            <TextView
                android:id="@+id/txt_nowDegree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현 재 기 온"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@id/btn_dust"
                app:layout_constraintBottom_toTopOf="@id/recycler_after"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_after"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txt_nowDegree"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>