<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/play_background_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_back_exam"
            android:adjustViewBounds="true" />

        <com.github.mmin18.widget.RealtimeBlurView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:realtimeBlurRadius="100sp"
            app:realtimeOverlayColor="#8000" />

        <FrameLayout
            android:id="@+id/PlayContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70sp"
            app:layout_constraintBottom_toBottomOf="parent">

            <ProgressBar
                android:id="@+id/play_bottom_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:max="40"
                android:progress="20"
                android:progressTint="@color/bottom_icon_selected"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/play_bottom_list"
                android:layout_width="42sp"
                android:layout_height="42sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10sp"/>

            <ImageView
                android:id="@+id/play_bottom_previous"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/icon_previous"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/play_bottom_list"
                app:layout_constraintRight_toLeftOf="@id/play_bottom_play"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/play_bottom_play"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:src="@drawable/icon_play"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/play_bottom_previous"
                app:layout_constraintRight_toLeftOf="@id/play_bottom_next"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/play_bottom_next"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/icon_next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/play_bottom_play"
                app:layout_constraintRight_toLeftOf="@id/play_bottom_equalizer"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/play_bottom_equalizer"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/icon_equalizer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="10sp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>