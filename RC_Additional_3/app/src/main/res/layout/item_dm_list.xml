<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <ImageView
            android:id="@+id/img_dm_item"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@drawable/btn_dm_list_unclicked"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="5sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/animator_dm_item"
            android:layout_width="7sp"
            android:layout_height="7sp"
            android:visibility="invisible"
            android:src="@drawable/dm_list_sidebar_unclicked"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/animtaor_dm_item_clicked"
            android:layout_width="7sp"
            android:layout_height="50sp"
            android:background="@drawable/dm_list_sidebar_clicked"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>